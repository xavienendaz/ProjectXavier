<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adding_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xavier.projectxavier.AddingQuestion">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/etTitle"
        android:hint="Title"
        android:layout_below="@+id/tvChooseTopic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etContent"
        android:hint="Content"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btSave"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="101dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="saveQuestion"/>

    <Spinner
        android:id="@+id/spinnerTopics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/topics_array"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvChooseTopic"
        android:layout_toEndOf="@+id/tvChooseTopic"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"></Spinner>

    <TextView
        android:text="Choose a topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvChooseTopic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
